     function onKeyEvent(key as String,press as Boolean) as Boolean
    if key = "left" 
            m.mybuttongroup.focusButton = 0 'left button
            return true
    else if key = "right"   
            m.mybuttongroup.focusButton = 1 'right button
            return true    
    end if
    return false
end function

